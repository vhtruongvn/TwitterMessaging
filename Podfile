# Uncomment the next line to define a global platform for your project
platform :ios, '8.0'

target 'TwitterMessaging' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for TwitterMessaging
  pod 'AFNetworking', '~> 3.0'
  pod 'AERecord' # Super awesome Core Data wrapper library for iOS written in Swift
  pod 'PagedArray', '~> 0.5' # Pagination
  pod 'Fabric'
  pod 'TwitterKit'
  pod 'TwitterCore'

  target 'TwitterMessagingTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'TwitterMessagingUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
